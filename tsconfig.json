{
    "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "rootDir": "./",
      "resolveJsonModule": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules"]
}
{
    "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "rootDir": "./server",
      "baseUrl": "./",
      "resolveJsonModule": true,
      "outDir": "server/dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["./server/**/*.ts"],
    "exclude": ["node_modules", "client"]
}